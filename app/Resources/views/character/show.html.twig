{% extends 'base.html.twig' %}

{% block body %}
    <h1>Character</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ character.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ character.name }}</td>
            </tr>
            <tr>
                <th>Player</th>
                <td>{{ character.player }}</td>
            </tr>
            <tr>
                <th>Game</th>
                <td>{{ character.game }}</td>
            </tr>
        </tbody>
    </table>

    <ul>

        {% if is_granted('CAN_EDIT', character) %}
            <li>
                <a class="btn btn-primary" href="{{ path('character_edit', { 'id': character.id }) }}">Edit</a>
            </li>
            <li>
            {{ form_start(delete_form) }}
                <input class="btn btn-primary" type="submit" value="Delete">
            {{ form_end(delete_form) }}
            </li>
        {% endif %}
        <li>
            <a href="{{ path('character_index') }}">Back to the character list</a>
        </li>
        <li>
            <a href="{{ path('homepage') }}">Back to the homepage</a>
        </li>
    </ul>
{% endblock %}
