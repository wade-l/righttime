{% extends 'base.html.twig' %}

{% block body %}
    <h1>Downtimeperiods list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Open</th>
                <th>Close</th>
                <th>Game</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for downtimePeriod in downtimePeriods %}
            <tr>
                <td><a href="{{ path('downtimeperiod_show', { 'id': downtimePeriod.id }) }}">{{ downtimePeriod.id }}</a></td>
                <td>{{ downtimePeriod.name }}</td>
                <td>{{ downtimePeriod.description }}</td>
                <td>{% if downtimePeriod.open %}{{ downtimePeriod.open|date('Y-m-d') }}{% endif %}</td>
                <td>{% if downtimePeriod.close %}{{ downtimePeriod.close|date('Y-m-d') }}{% endif %}</td>
                <td>{{ downtimePeriod.game.name }}</td>
                <td>
                    <ul>                     
                        {% for character in characters %}
                            {% if character.game == downtimePeriod.game %}
                                <li>
                                    <a href="{{ path('turn_new', { 'downtime_id': downtimePeriod.id, 'character_id': character.id }) }}">Turn for {{ character.name }}</a>
                                </li>
                            {% endif %}
                        {% endfor %}

                        {% if is_granted('CAN_ORGANIZE', downtimePeriod) %}
                        <li>
                            <a href="{{ path('downtimeperiod_edit', { 'id': downtimePeriod.id }) }}">edit</a>
                        </li>
                        {% endif %}
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
