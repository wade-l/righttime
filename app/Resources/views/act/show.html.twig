{% extends 'base.html.twig' %}

{% block body %}
    <h1>Act</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ act.id }}</td>
            </tr>
            <tr>
                <th>Summary</th>
                <td>{{ act.summary }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ act.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('act_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('act_edit', { 'id': act.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
