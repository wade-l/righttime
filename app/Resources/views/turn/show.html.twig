{% extends 'base.html.twig' %}

{% block body %}
    <h1>Turn</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ turn.id }}</td>
            </tr>
            <tr>
                <th>Finalized</th>
                <td>{% if turn.finalized %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Comments</th>
                <td>{{ turn.comments }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('turn_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('turn_edit', { 'downtime_id': turn.downtimePeriod.id, 'character_id': turn.character.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
