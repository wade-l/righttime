{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ turn.downtimePeriod }} for {{ turn.character }}</h1>

    {{ form_start(form) }}


        <h3>Actions</h3>
        <ul class="acts" data-prototype="{{ form_widget(form.acts.vars.prototype)|e('html_attr') }}">
            {% for act in form.acts %}
                <li>{{ form_row(act.summary) }}</li>
                <li>{{ form_row(act.description) }}</li>
            {% endfor %}
        </ul>

        {{ form_row(form.comments) }}

        <input type="submit" value="Save Turn" />
    {{ form_end(form) }}

    <ul>
        <li>
            <a href="{{ path('turn_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="{{ asset('js/addActions.js') }}"></script>
{% endblock -%}


